{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "prompt-line-rs",
  "version": "0.1.7",
  "identifier": "com.prompt-line.prompt-line-rs",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "prompt-line-rs",
        "width": 530,
        "height": 320,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": true,
        "visible": false,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "installerHooks": "nsis/installer.nsx"
      }
    }
  }
}
